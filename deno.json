{
  "importMap": "import_map.json",
  "exclude": ["vendor/"],
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "lineWidth": 120
  },
  "vendor": true,
  "tasks": {
    "start": "deno run --allow-read=.env,.env.defaults,.env.example,data,public --allow-net --allow-env index.ts",
    "dev": "deno run --allow-read=.env,.env.defaults,.env.example,data,public --allow-net --allow-env --watch index.ts",
    "test": "deno lint && deno fmt && deno test -A && deno bench -A",
    "clean": "rm -rf /tmp/deno_cache"
  }
}
