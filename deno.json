{
  "importMap": "import_map.json",
  "lint": {
    "files": {
      "exclude": ["vendor/"]
    },
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "files": {
      "exclude": ["vendor/"]
    },
    "options": {
      "lineWidth": 120
    }
  },
  "tasks": {
    "start": "deno run --allow-read=. --allow-net --allow-env index.ts",
    "test": "deno lint && deno fmt && deno test -A && deno bench -A"
  }
}
